<% content_for :content do %>
  <main class="d-flex w-100 bg-blue">
    <div class="min-vh-100 container d-flex flex-column">
      <nav class="navbar navbar-expand navbar-light">
        <div class="container-fluid">
          <%= link_to "/", class: "navbar-brand" do %>
            <%= image_tag('BCRTS-Logo-Horizontal-White.png', style: 'max-height: 40px') %>
          <% end %>

          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Back to Portal", "/", class: "nav-link text-white" %>
            </li>
          </ul>
        </div>
      </nav>

      <div class="row p-3">
        <%= render "flash_messages" %>
      </div>

      <div class="row flex-grow-1">
        <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
          <div class="d-table-cell align-middle">
            <h2 class="text-center text-white fw-bold mb-3">The Tourism Impact Portal</h2>

            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </main>
<% end %>

<%= render template: "layouts/application" %>
