<div class="text-center mt-4 text-white">
  <p class="lead">
    Forgot your password?
  </p>
</div>

<div class="card rounded">
  <div class="card-body">
    <div class="m-sm-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %><br />
          <%= f.email_field :email, class: 'form-control form-control-lg', placeholder: 'Enter your email', autofocus: true, autocomplete: "email" %>
        </div>

        <div class="text-center mt-3">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="text-center mt-4 text-white">
  <%= link_to "Back to Log in", new_session_path(resource_name), class: 'text-white' %><br />
</div>
