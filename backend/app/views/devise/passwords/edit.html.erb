<div class="text-center mt-4 text-white">
  <p class="lead">
    Change your password
  </p>
</div>

<div class="card rounded">
  <div class="card-body">
    <div class="m-sm-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :password, "New password", class: 'form-label' %><br />
          <%= f.password_field :password, class: 'form-control form-control-lg', autofocus: true, autocomplete: "new-password" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm new password", class: 'form-label' %><br />
          <%= f.password_field :password_confirmation, class: 'form-control form-control-lg', autocomplete: "new-password" %>
        </div>

        <div class="text-center mt-3">
          <%= f.submit "Change my password", class: 'btn btn-lg btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="text-center mt-4 text-white">
  <%= link_to "Back to Log in", new_session_path(resource_name), class: 'text-white' %><br />
</div>
