<%= simple_form_for [:admin, data_upload] do |f| %>
  <% if data_upload.errors.any? %>
    <div class="alert alert-danger">
      Please review the problems below:

      <ul>
        <% data_upload.errors.each do |error| %>
          <% next if error.attribute.in?([:file, :uploader]) %>
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :uploader, collection: DataUpload::UPLOADERS %>
    <%= f.input :file, as: :file %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, 'Upload', class: 'btn btn-primary' %> or <%= link_to 'Back', :back %>
  </div>
<% end %>
