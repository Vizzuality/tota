<%= simple_form_for [:admin, widget] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= card 'Details' do %>
      <%= f.input :slug, disabled: true %>
      <%= f.input :title %>
      <%= f.input :sub_title %>
      <%= f.input :description, as: :trix_editor %>
      <%= f.input :note, as: :trix_editor %>
      <%= f.input :public, as: :select, label: 'Visibility', collection: [['Public', true], ['Private', false]], include_blank: false %>
    <% end %>

    <%= card 'Sources', class: 'mt-3' do %>
      <%= render "sources_list", form: f %>
    <% end %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, class: 'btn btn-primary' %> or <%= link_to 'Back', :back %>
  </div>
<% end %>
