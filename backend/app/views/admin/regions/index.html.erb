<%= link_to new_admin_region_path, class: "btn btn-primary float-end mt-n1" do %>
  <i class="bi bi-plus"></i>
  New Region
<% end %>

<h1 class="h3 mb-3 me-2 d-inline-block">Regions</h1>

<%= render "index_search_form", q: @q, search_by: :name_cont %>

<table class="table table-hover" data-controller="table">
  <thead>
    <tr>
      <th>
        <%= sort_link @q, :name %>
      </th>
      <th>
        <%= sort_link @q, :active %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @resources.each do |region| %>
      <tr data-link="<%= edit_admin_region_path(region) %>">
        <td><%= region.name %></td>
        <td><%= status_tag(region.active) %></td>
        <td class="d-flex justify-content-end">
          <%= dropdown "Actions" do %>
            <li>
              <%= link_to 'Edit', edit_admin_region_path(region), class: "dropdown-item" %>
            </li>
            <li>
              <%= link_to 'Destroy', [:admin, region], class: "dropdown-item", method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for(:content_footer) do %>
  <%== pagy_bootstrap_nav(@pagy) %>

  <div class="float-end">
    <%== pagy_info(@pagy) %>
  </div>
<% end %>
