<h1 class="h3 mb-3 me-2 d-inline-block">Themes</h1>

<%= render "index_search_form", q: @q, search_by: :title_or_description_cont %>

<table class="table table-hover" data-controller="table">
  <thead>
    <tr>
      <th>
        <%= sort_link @q, :title %>
      </th>
      <th>
        <%= sort_link @q, :description %>
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @resources.each do |theme| %>
      <tr data-link="<%= admin_theme_path(theme) %>">
        <td><%= theme.title %></td>
        <td><%= theme.description&.html_safe %></td>
        <td class="text-end">
          <%= dropdown "Actions" do %>
            <li>
              <%= link_to 'Show', admin_theme_path(theme), class: "dropdown-item" %>
              <%= link_to 'Edit', edit_admin_theme_path(theme), class: "dropdown-item" %>
            </li>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for(:content_footer) do %>
  <%== pagy_bootstrap_nav(@pagy) %>

  <div class="float-end">
    <%== pagy_info(@pagy) %>
  </div>
<% end %>
