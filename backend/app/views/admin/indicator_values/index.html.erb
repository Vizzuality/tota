<h1 class="h3 mb-3 me-2 d-inline-block">Indicators</h1>

<%= render "index_search_form", q: @q, search_by: :indicator_slug_or_category_1_or_category_2_cont do |f| %>
  <div class="d-inline-block" data-controller="filters">
    <button type="button" class="btn btn-primary-outline m1-n1" data-filters-target="button">
      <i class="bi bi-filter"></i>
      Filters
      <% if @q.conditions.any? %>
        <span class="badge bg-info"><%= @q.conditions.count %></span>
      <% end %>
    </button>
    <template data-filters-target="popup">
      <%= f.input :region_id_eq, as: :select, label: 'Region', collection: Region.province.or(Region.tourism_region) %>
      <%= f.input :indicator_slug_eq, as: :select, label: 'Indicator', collection: Indicator.pluck(:slug).sort %>

      <%= button_tag 'Apply', class: 'btn btn-primary', type: :submit %>
      <%= link_to 'Reset', admin_indicator_values_url(redirect_params), class: 'btn btn-link' %>
    </template>
  </div>
<% end %>

<table class="table table-hover" data-controller="table">
  <thead>
    <tr>
      <th>
        <%= sort_link @q, :indicator_slug, 'Indicator' %>
      </th>
      <th>
        <%= sort_link @q, :region_name, 'Region' %>
      </th>
      <th>
        <%= sort_link @q, :date %>
      </th>
      <th>
        <%= sort_link @q, :category_1 %>
      </th>
      <th>
        <%= sort_link @q, :category_2 %>
      </th>
      <th>
        <%= sort_link @q, :value %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @resources.each do |value| %>
      <tr>
        <td><%= value.indicator.slug %></td>
        <td><%= value.region&.name %></td>
        <td><%= value.date %></td>
        <td><%= value.category_1 %></td>
        <td><%= value.category_2 %></td>
        <td><%= value.value %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for(:content_footer) do %>
  <%== pagy_bootstrap_nav(@pagy) %>

  <div class="float-end">
    <%== pagy_info(@pagy) %>
  </div>
<% end %>
