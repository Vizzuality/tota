<h1 class="h3 mb-3 me-2 d-inline-block">TOTA Members</h1>

<%= render "index_search_form", q: @q, search_by: :name_cont %>

<table class="table table-hover" data-controller="table">
  <thead>
    <tr>
      <th>
        Region
      </th>
      <th>
        Subregion
      </th>
      <th>
        Business Type
      </th>
      <th>
        Business Subtype
      </th>
      <th>
        <%= sort_link @q, :name %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @resources.each do |value| %>
      <tr data-link="<%= admin_organization_path(value) %>">
        <td><%= value.region_name %></td>
        <td><%= value.subregion_name %></td>
        <td><%= value.business_type_name %></td>
        <td><%= value.business_subtype_name %></td>
        <td><%= value.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for(:content_footer) do %>
  <%== pagy_bootstrap_nav(@pagy) %>

  <div class="float-end">
    <%== pagy_info(@pagy) %>
  </div>
<% end %>
